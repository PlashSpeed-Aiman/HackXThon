<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApplication1.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaApplication1">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Spacing="5" Margin="10">
                <TextBlock Text="Navigation"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,10,0,20" />

                <Button Content="Home"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="HomeViewModel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="10,8" />

                <Button Content="Settings"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="SettingsViewModel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="10,8" />

                <Button Content="Haiku"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="HaikuViewModel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="10,8" />

                <Button Content="Code Confessional"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="ConfessionalViewModel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="10,8" />

                <Button Content="Breathing Exercise"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="BreathingViewModel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="10,8" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1"
                        Content="{Binding NavigationService.CurrentViewModel}" />
    </Grid>

</Window>
